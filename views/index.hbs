<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>ZAZiOs CDN</title>
</head>
<body>
    <div class="container mt-5 text-center">
        <h1>ZAZiOs CDN</h1>
        <h3>A fileserver for ZAZiOs projects</h3>
        <h4>Nothing to see here</h4>
        <img class="img-fluid" src="/main.png" style="height: 250px">
        <h6>except me xd</h6>
        <form action="/list/index" method="GET" class="d-none">
            <input type="text" name="pass">
            <input type="text" name="path" value="" class="d-none">
            <button class="btn btn-outline-success" type="submit">Отправить</button>
        </form>
    </div>
</body>
<style>
    body {
        background-color: #1d1d1b;
    }
</style>
<script>

let imgNode = document.querySelector('img')
let formNode = document.querySelector('form')
let counter = 0
imgNode.addEventListener('click', () => {
    counter += 1
    if (counter > 6 && counter <= 7) {
        formNode.classList.remove("d-none");
    }
})
</script>
</html>